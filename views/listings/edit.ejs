<% layout('./layouts/boilerplate') -%>
<body>
    <h1>Edit form</h1>
    <div class="row">
    <div class="col-8 offset-2">
    <form method="POST" action="/listings/<%=data._id%>?_method=PUT">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
             <input type="text" name="listings[title]" placeholder="Enter title" value="<%= data.title %>" class="form-control">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image url</label>
            <input type="text" name="listings[image]" placeholder="Enter URL of the image" value="<%= data.image %>" class="form-control">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
             <textarea  type="text" name="listings[description]" placeholder="Enter description" class="form-control"><%= data.description %></textarea>
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listings[price]" placeholder="enter price" value="<%= data.price %>" class="form-control">
        </div>
        
        <div class="mb-3 col-md-8">
            <label for="country"  class="form-label">Country</label>
            <input type="text" name="listings[country]" placeholder="Enter Country" value="<%= data.country %>" class="form-control">
        </div>
        </div>

        <div class="mb-3">
            <label for="locatiom" class="form-label">Location</label>
            <input type="text" name="listings[location]" placeholder="Enter Location" value="<%= data.location %>" class="form-control">
        </div>
    </form>
    
    </div>
    </div>
</body>