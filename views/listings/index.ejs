<% layout('./layouts/boilerplate') -%>
<body>
  <h2>All Listings</h2>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(listing of data){%>
    <a href="/listings/<%= listing._id%>" class="listing-links" title="<%= listing.title %>">
    <div class="card col">
      <img src="<%= listing.image%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
      
      <div class="card-img-overlay"></div>
      
      <div class="card-body">
      <p class="card-text">
       <b> <%= listing.title %></b>
      </p>
       
        &#8377; <%= listing.price?.toLocaleString("en-IN") || "N/A" %>/night

    </div>
    </div>
    </a>
    <%}%>
</div>
   
</body>
