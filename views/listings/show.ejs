<% layout('./layouts/boilerplate') -%>
<body>
    <div class="row">
        
        <div class="col-md-6 offset-3">
            <h2><%= data.title %></h2>
            <div class="card listing-card">
            <img src="<%= data.image%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
            <div class="card-body">
                
                <%= data.description%><br>
                &#8377;<%= data.price.toLocaleString("en-IN")%><br>
                <%= data.location%><br>
                <%= data.country%><br>
            </div>
            </div>            
        </div>
        <div class="row ">
        <div class="col-1 mb-3 offset-3">
        <a href="/listings/<%= data._id %>/edit" title="edit the form"><button class="btn btn-secondary">Edit</button></a>
        </div>
        <div class="col-1">
        <form method="POST" action="/listings/<%= data._id %>?_method=delete" id="deleteListing">
        <button class="btn btn-danger">delete</button>
        </form >
        </div>
        </div>
        <br>
        <hr>
        <div    class="col-md-6 offset-3 mb-5">
            <form action="/listings/<%= data._id %>/reviews" method="post" novalidate class="needs-validation">
                <h4>Leave a comment</h4>
                <label for="rating" class="form-label mb-3 mt-3">Rating</label>
                <input type="range" name="review[rating]" id="rating" class="form-range" min="1" max="5">
                <label for="comment" class="form-label mb-3 mt-3">Comment</label>
                <textarea name="review[comment]" id="comment" class="form-control" required></textarea>
                <div class="invalid-feedback">Please enter a comment.</div>
                <button class="btn btn-outline-dark mt-2">Submit </button>
            </form>
        </div>
        <hr/>
        <div class="col-md-6 offset-3 mb-5">
            <p><b>All reviews</b></p>
            <div class="row">
                <% for(review of data.reviews){ %>
                    <div class="card col-md-5 mb-3 mx-2">
                        <div class="card-body">
                            <h5 class="card-title">Jane Doe</h5>
                            <p class="card-text"><%= review.comment %></p>
                            <p class="card-text"><%= review.rating %> stars</p>
                            <form action="/listings/<%= data._id %>/reviews/<%= review._id %>?_method=delete" method="post" class="mb-3">
                                <button class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </div>
            <% } %>
        </div>
    </div>
</body>
